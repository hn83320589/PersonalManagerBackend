# =============================================================================
# Personal Manager Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_CONNECTION_STRING=Server=localhost;Database=personal_manager;User=root;Password=your_password;
USE_ENTITY_FRAMEWORK=true

# Redis Configuration (Optional)
REDIS_CONNECTION_STRING=localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-make-it-very-long-and-random
JWT_ISSUER=PersonalManagerAPI
JWT_AUDIENCE=PersonalManagerClient
JWT_EXPIRY_HOURS=1
JWT_REFRESH_EXPIRY_DAYS=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx
UPLOAD_PATH=./wwwroot/uploads

# Logging Configuration
LOG_LEVEL=Information
LOG_TO_FILE=true
LOG_FILE_PATH=./logs

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=5
RATE_LIMIT_BLOCK_DURATION_MINUTES=60

# Security Configuration
ENABLE_HTTPS_REDIRECTION=true
ENABLE_SECURITY_HEADERS=true
ENABLE_SENSITIVE_DATA_LOGGING=false

# Performance Configuration
ENABLE_RESPONSE_CACHING=true
CACHE_DURATION_MINUTES=15

# Monitoring and Health Checks
HEALTH_CHECK_TIMEOUT_SECONDS=30
ENABLE_DETAILED_ERRORS=false

# External Services
SONAR_TOKEN=your-sonar-token
CODECOV_TOKEN=your-codecov-token

# Deployment Configuration
ENVIRONMENT=Development
APPLICATION_NAME=PersonalManagerAPI
APPLICATION_VERSION=1.0.0

# Zeabur Configuration (for deployment)
ZEABUR_SERVICE_ID=your-zeabur-service-id
ZEABUR_API_TOKEN=your-zeabur-api-token

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Monitoring Webhooks (optional)
MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook